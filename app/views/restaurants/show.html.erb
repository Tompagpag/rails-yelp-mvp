
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <p class="card-text"><%= @restaurant.category.capitalize %></p>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <%= link_to "index", restaurants_path, class: "btn btn-primary m-2" %>
    <%= link_to "add review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary m-2" %>
  </div>
</div>



<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> Rating :<%= review.rating %></li>
  <% end %>
</ul>
